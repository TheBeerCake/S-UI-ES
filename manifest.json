{
  "name": "Steemit UI/UX enhancement suite",
  "description": "This is a chrome extension to improve user experience and add some new neat features to existing steemit page.",
  "version": "0.0.0.8",
  "icons":{"128":"icon.png"},
  "permissions": [
    "tabs", "https://steemit.com/*","activeTab"
  ],
  "short_name": "SUIES",
  "content_scripts": [   
    { 
      "run_at" :"document_idle",
      "matches": ["https://steemit.com/*"],
      "js": ["vendor/jquery-1.12.4.min.js","vendor/underscore-min.js","SES.js"],
      "css": ["style.css"],
      "permissions": ["activeTab"]
    } ],
  "background": {
      "persistent": false,
      "scripts": ["background.js"]
    },
  "browser_action": {
      "default_title": "Steemit UI/UX Enhancement Suite by @beercake",
      "default_icon": "icon.png"
  },
  "manifest_version": 2
}
